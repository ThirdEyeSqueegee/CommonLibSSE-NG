{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "$env{COMMONLIBSSE_COMPILER} $env{COMMONLIBSSE_PLATFORM} $env{COMMONLIBSSE_UNICODE}",
        "CMAKE_SHARED_LINKER_FLAGS": "$env{COMMONLIBSSE_LINKER}",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>DLL"
      }
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows-skse",
        "VCPKG_HOST_TRIPLET": "x64-windows-skse"
      }
    },
    {
      "name": "win32",
      "hidden": true,
      "environment": {
        "COMMONLIBSSE_PLATFORM": "-DWIN32_LEAN_AND_MEAN -DNOMINMAX"
      }
    },
    {
      "name": "win32-unicode",
      "hidden": true,
      "inherits": "win32",
      "environment": {
        "COMMONLIBSSE_UNICODE": "-DUNICODE -D_UNICODE"
      }
    },
    {
      "name": "msvc",
      "hidden": true,
      "generator": "Ninja",
      "cmakeExecutable": "C:/Program Files/CMake/bin/cmake.exe",
      "environment": {
        "COMMONLIBSSE_COMPILER": "/EHsc /fp:contract /fp:except- /cgthreads8 /MP /diagnostics:caret /sdl /W4 /Zc:__cplusplus /Zc:enumTypes /Zc:preprocessor /Zc:templateScope",
        "COMMONLIBSSE_LINKER": "/CGTHREADS:8"
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_RELEASE": "/O2 /Ob3 /fp:fast /GR- /Gw /Qpar",
        "CMAKE_SHARED_LINKER_FLAGS_RELEASE": "/LTCG:INCREMENTAL /OPT:REF,ICF=4",
        "CMAKE_SHARED_LINKER_FLAGS_DEBUG": "/DEBUG:FULL"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64",
          "enableMicrosoftCodeAnalysis": true
        }
      }
    },
    {
      "name": "runtimes-flatrim",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_SKYRIM_VR": "OFF"
      }
    },

    {
      "name": "build-release-all",
      "inherits": ["base", "vcpkg", "win32-unicode", "msvc"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "binaryDir": "${sourceDir}/build/release-msvc-all"
    },
    {
      "name": "build-release-flatrim",
      "inherits": ["build-release-all", "runtimes-flatrim"],
      "binaryDir": "${sourceDir}/build/release-msvc-flatrim"
    },
    {
      "name": "build-debug-all",
      "inherits": ["base", "vcpkg", "win32-unicode", "msvc"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "binaryDir": "${sourceDir}/build/debug-msvc-all"
    },
    {
      "name": "build-debug-flatrim",
      "inherits": ["build-debug-all", "runtimes-flatrim"],
      "binaryDir": "${sourceDir}/build/debug-msvc-flatrim"
    }
  ],
  "buildPresets": [
    {
      "name": "debug-all",
      "displayName": "Debug (All)",
      "configurePreset": "build-debug-all"
    },
    {
      "name": "debug-flatrim",
      "displayName": "Debug (Flatrim)",
      "configurePreset": "build-debug-flatrim"
    },
    {
      "name": "release-all",
      "displayName": "Release (All)",
      "configurePreset": "build-release-all"
    },
    {
      "name": "release-flatrim",
      "displayName": "Release (Flatrim)",
      "configurePreset": "build-release-flatrim"
    }
  ]
}
